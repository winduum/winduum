{
  "name": "winduum",
  "version": "0.5.0",
  "type": "module",
  "main": "utils/tailwind.cjs",
  "module": "utils/tailwind.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build-prod": "vite build -c vite.config.prod.js",
    "eslint": "eslint 'src/**/*.js'",
    "eslint-fix": "eslint 'src/**/*.js' --fix",
    "stylelint": "npx stylelint 'src/**/*.css'",
    "stylelint-fix": "npx stylelint 'src/**/*.css' --fix",
    "tailwind": "rollup utils/tailwind.js --file utils/tailwind.cjs -f cjs --exports named"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@vitejs/plugin-vue": "^4.5.2",
    "autoprefixer": "^10.4.16",
    "css-has-pseudo": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "fast-glob": "^3.3.2",
    "postcss": "^8.4.32",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.2",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.0.10",
    "vue": "^3.3.13"
  },
  "files": [
    "index.js",
    "tailwind.config.js",
    "dist",
    "src",
    "utils"
  ],
  "exports": {
    ".": {
      "default": "./utils/tailwind.js",
      "require": "./utils/tailwind.cjs",
      "import": "./utils/tailwind.js"
    },
    "./main.css": "./dist/main.css",
    "./main-rgb.css": "./dist/main-rgb.css",
    "./tailwind.css": "./dist/tailwind.css",
    "./src/*": "./src/*",
    "./utils/*": "./utils/*",
    "./base/*": "./src/base/*",
    "./components/*": "./src/components/*",
    "./libraries/*": "./src/libraries/*",
    "./ui/*": "./src/ui/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/winduum/winduum.git"
  }
}

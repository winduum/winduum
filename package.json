{
  "name": "winduum",
  "version": "0.7.1",
  "type": "module",
  "main": "plugin/tailwind.cjs",
  "module": "plugin/tailwind.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build-prod": "vite build -c vite.config.prod.js",
    "eslint": "eslint 'src/**/*.js'",
    "eslint-fix": "eslint 'src/**/*.js' --fix",
    "stylelint": "npx stylelint 'src/**/*.css'",
    "stylelint-fix": "npx stylelint 'src/**/*.css' --fix",
    "tailwind": "rollup plugin/tailwind.js --file plugin/tailwind.cjs -f cjs --exports named",
    "publish-next": "npm publish --tag next"
  },
  "devDependencies": {
    "@stylistic/stylelint-config": "^1.0.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "autoprefixer": "^10.4.17",
    "css-has-pseudo": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "fast-glob": "^3.3.2",
    "postcss": "^8.4.33",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.0.12",
    "vue": "^3.4.15",
    "slide-element": "^2.3.1"
  },
  "files": [
    "index.js",
    "tailwind.config.js",
    "dist",
    "src",
    "plugin"
  ],
  "exports": {
    ".": {
      "default": "./plugin/tailwind.js",
      "require": "./plugin/tailwind.cjs",
      "import": "./plugin/tailwind.js"
    },
    "./src/*": "./src/*",
    "./dist/*": "./dist/*",
    "./plugin/*": "./plugin/*",
    "./base/*": "./src/base/*",
    "./components/*": "./src/components/*",
    "./libraries/*": "./src/libraries/*",
    "./ui/*": "./src/ui/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/winduum/winduum.git"
  }
}
